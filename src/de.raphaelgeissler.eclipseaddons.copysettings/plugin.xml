<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               label="Copy Project Specific Settings">
            <command
                  commandId="de.raphaelgeissler.eclipseaddons.copysettings.command"
                  label="Copy Settings"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate
                              ifEmpty="false"
                              operator="or">
                           <adapt
                                 type="org.eclipse.jdt.core.IJavaProject">
                           </adapt>
                        </iterate>
                     </and>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="de.raphaelgeissler.eclipseaddons.applysettings.command"
                  label="Apply Settings"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <and>
                        <iterate
                              ifEmpty="false"
                              operator="or">
                           <adapt
                                 type="org.eclipse.jdt.core.IJavaProject">
                           </adapt>
                        </iterate>
                        <with
                              variable="de.raphaelgeissler.eclipseaddons.copysettings.apply.active">
                           <equals
                                 value="ENABLED">
                           </equals>
                        </with>
                     </and>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.raphaelgeissler.eclipseaddons.copysettings.ui.CopySettingsHandler"
            commandId="de.raphaelgeissler.eclipseaddons.copysettings.command">
      </handler>
      <handler
            class="de.raphaelgeissler.eclipseaddons.copysettings.ui.ApplySettingsHandler"
            commandId="de.raphaelgeissler.eclipseaddons.applysettings.command">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="de.raphaelgeissler.eclipseaddons.copysettings.ui.CommandState">
         <variable
               name="de.raphaelgeissler.eclipseaddons.copysettings.apply.active"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
